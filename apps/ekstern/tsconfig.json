{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "types": ["node", "vite/client", "vitest/globals"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "api/server.cjs",
    "scripts",
    "sanity.config.ts",
    "sanity.cli.ts",
    "sanity",
    "playwright.config.ts",
    "cypress.config.ts",
    "vite.config.ts"
  ],
  "exclude": ["cypress", "playwright", "src/nais.js", "static"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.server.json"
    }
  ]
}
